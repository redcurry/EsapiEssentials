<Window
    x:Class="EsapiEssentials.Samples.Async.LogInWaitDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Logging in"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    Background="LightBlue"
    ResizeMode="NoResize"
    SizeToContent="Height"
    Width="300"
    >
    <StackPanel Margin="10">
        <TextBlock Text="Logging in to Eclipse. Please wait." />
        <ProgressBar
            IsIndeterminate="True"
            Height="16"
            Margin="0,5,0,0"
            />
    </StackPanel>
</Window>
